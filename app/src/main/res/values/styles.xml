<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- LoginActivity Styles-->
    <style name="LoginActivityEdittext">
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="LoginActivityButton">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="LoginActivityTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>


    </style>
    <!-- Signup Styles-->

    <style name="SignupButton">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">23dp</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="SignupEditText">
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>


    </style>
    <!--ForgotPasswordActivity-->
    <style name="ForgotTv">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginLeft">57dp</item>
        <item name="android:layout_marginRight">57dp</item>
        <item name="android:layout_alignParentBottom">true</item>


    </style>


    <!--Button-->

    <style name="PrimaryButton">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="PrimaryEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginBottom">17dp</item>

    </style>
    <!--ResetPassword-->
    <style name="ResetEditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:inputType">textPassword</item>

    </style>
    <!--ActivityVerification-->
    <style name="VerificationTextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:inputType">textPassword</item>

    </style>

    <style name="VerificationEditText">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">34sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:layout_weight">0.25</item>


    </style>
    <!--Navigation Drawer-->
    <style name="navHeaderTvName">
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/daveSmith</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="navHeaderTvEditProfile">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/warmGrey</item>

    </style>


    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorPrimary</item>


    </style>

    <style name="tvitem">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingBottom">20dp</item>


    </style>

    <style name="itemStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>


    </style>


</resources>
